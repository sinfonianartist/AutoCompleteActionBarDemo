<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
         <item name="android:dropDownListViewStyle">@style/CustomDropDownListViewStyle</item>
    </style>

    <!-- This specific style allows you to customize the look and feel of the AutoCompleteTextView
         drop down. -->
    <style name="CustomDropDownListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

</resources>
